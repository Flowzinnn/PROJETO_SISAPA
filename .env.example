# SISAPA - Variáveis de Ambiente
# Copie este arquivo para .env e configure suas credenciais

# ========== Configurações do Banco de Dados MySQL ==========
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=sisapa_db
DB_PORT=3306

# ========== Configurações da Aplicação ==========
SECRET_KEY=sua_chave_secreta_super_forte_aqui
FLASK_ENV=development
PORT=5000

# ========== Configurações de Segurança ==========
# Gere uma chave forte para produção: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=sua_jwt_secret_key_aqui

# ========== Configurações de Email (opcional) ==========
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app_gmail

# ========== Configurações de Upload ==========
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ========== Configurações de Debug ==========
DEBUG=true
TESTING=false